<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" 
    android:layout_gravity="center" android:weightSum="1">
	<LinearLayout 
		android:id="@+id/LinearLayout06" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginTop="10px"
		android:layout_marginBottom="10px" 
		android:baselineAligned="true" 
		android:gravity="center" 
		android:layout_gravity="center">
		<Button 
			android:id="@+id/vntTitleTextView" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:background="@drawable/title">
		</Button>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout01" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
		<TextView 
			android:text="@+id/TextView01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/alarmGPSInfoTextView">
		</TextView>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout02" 
		android:layout_width="wrap_content" 
		android:layout_gravity="right" 
		android:layout_height="36dp">
		<Button 
			android:layout_width="80px" 
			android:text="@string/alarmSend" 
			android:id="@+id/alarmSendButton" 
			android:layout_height="wrap_content">
		</Button>
		<Button android:layout_width="80px" 
			android:text="@string/vntReturn" 
			android:id="@+id/alarmReturnButton" 
			android:layout_height="wrap_content">
		</Button>
	</LinearLayout>
	
</LinearLayout>